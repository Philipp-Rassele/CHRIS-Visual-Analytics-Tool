{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "react/prop-types": "warn",
        "react-hooks/rules-of-hooks": "warn", // "error" Checks rules of Hooks
        "react-hooks/exhaustive-deps": "warn" // Checks effect
    }
}
